{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<section class="position-relative bg-primary" style="margin-top:90px">
    <div id="particles-js"><canvas class="particles-js-canvas-el" width="2842" height="504" style="width: 100%; height: 100%;"></canvas></div>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="font-w-8">Статьи</h1>
            </div>
        </div>
        <!-- / .row -->
    </div>
    <!-- / .container -->
</section>

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 mb-6 mb-lg-0">
                {{#foreach posts}}

                    <article class="{{post_class}} card border-0 bg-transparent shadow">
                        {{#if feature_image}}
                            <img class="card-img-top shadow rounded"
                                 srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w"
                                 sizes="(max-width: 1000px) 400px, 700px"
                                 src="{{img_url feature_image size="m"}}"
                                 alt="{{title}}"
                            />
                        {{/if}}
                        <div class="card-body">
                            <h2 class="h5 font-weight-bold">
                                <a class="link-title" href="{{url}}">{{title}}</a>
                            </h2>
                            <p>{{excerpt words="33"}}</p>
                        </div>

                        <div class="card-footer bg-transparent border-0 pt-0">
                            <a class="btn btn-outline-primary" href="{{url}}">Читать далее <i class="las la-arrow-right"></i></a>
                        </div>
                    </article>
                    <hr class="my-8">
                {{/foreach}}

                <div class="row mt-11">
                    <div class="col-12">
                        {{pagination}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{> footer-black}}
