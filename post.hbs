        <!-- / .row -->
    </div>
    <!-- / .container -->
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Blog Card -->
            {{#post}}
                <article class="{{post_class}} {{#unless feature_image}}no-image{{/unless}}">
                    <div class="card border-0 bg-transparent">
                        <h2 class="font-weight-bold my-3">
                            {{title}}
                        </h2>
                        {{!-- Displays the featured image if exists --}}
                        {{#if feature_image}}
                            <figure>
                                <img class="card-img-top shadow rounded" src="{{img_url feature_image}}" alt="{{title}}" alt="Image">
                            </figure>
                        {{/if}}

                        <div class="card-body pt-5 px-0">
                            {{!-- Display the post content --}}
                            {{content}}
                        </div>

                    </div>

                </article>
            {{/post}}
            </div>
        </div>
    </div>
</section>

