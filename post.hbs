{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
<section class="position-relative bg-primary" style="margin-top:90px">
    <div id="particles-js"><canvas class="particles-js-canvas-el" width="2842" height="504" style="width: 100%; height: 100%;"></canvas></div>
    <div class="container">
        <div class="row">
